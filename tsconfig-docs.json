{
  "extends": "./tsconfig-base.json",
  "include": ["./src/util/**/*.ts"],
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true
  },
  "typedocOptions": {
    "name": "Node.js bindings for DAML",
    "readme": "README.DOCS.md",
    "ignoreCompilerErrors": true,
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "mode": "file"
  }
}
